<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="android.view.View.OnClickListener" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/explore_item_image"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="@dimen/dp_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="Chicken"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_toRightOf="@id/explore_item_image"
                android:textColor="@color/color_de2d2d2d"
                android:id="@+id/explore_item_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="Chicken"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_toRightOf="@id/explore_item_image"
                android:textColor="@color/color_992d2d2d"
                android:id="@+id/explore_item_desc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrow"
                android:src="@drawable/rightarrow"
                android:layout_marginRight="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</layout>